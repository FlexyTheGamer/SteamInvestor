<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:SteamInventoryAIR.Converters"
             xmlns:local="clr-namespace:SteamInventoryAIR"
             x:Class="SteamInventoryAIR.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter"/>

            <converters:LoginStatusColorConverter x:Key="LoginStatusColorConverter"/>

            <!-- Add this line to define the converter as a resource -->
            <converters:IntEqualConverter x:Key="IntEqualConverter" />

        </ResourceDictionary>
    </Application.Resources>
</Application>
